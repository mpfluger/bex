# Read var from stdin and do something on condition
read -n 1 -p "yes? - " y; echo $y; if [[ $y == "y" ]] ;then echo 1; fi

# Replace
X=´echo $Y | sed 's/foo/bar/(g)'´ sparen und durch Konstrukte wie
X=${X(/|//|#|##|%|%%)blah(/sülz)} ersetzen.

# Debug
sh -xv

